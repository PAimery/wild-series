{% extends 'base.html.twig' %}

{% block title %}All categorys
{% endblock %}

{% block body %}
	<h1>Toutes les catégories de la table category :
	</h1>
	{% for category in categories %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ category.name }}

				<a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
			</div>
		{% else %}
			Aucune série trouvée.
		{% endfor %}

		<a href="{{ path('home_index') }}">
			Retour à l'accueil
		</a>
	{% endblock %}
